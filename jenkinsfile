pipeline {
    agent any 
    stages {
        stage('Build') { 
            steps {
                bat "mvn clean" 
            }
        }
        stage('Test') { 
            steps {
               bat "mvn test"
            }
        }
        stage('Deploy') { 
            steps {
                bat "mvn package"
            }
        }
        stage('Consolidated Results') {
            steps {
                input("Do you want to capture results?")
                junit '**/target/surefire-reports/TEST-*.xml'
                archiveArtifacts 'target/*.jar'
            }
        }
    }
}
